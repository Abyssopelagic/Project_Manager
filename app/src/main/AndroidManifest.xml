<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ksbay.project_manager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WittAct"
            android:label="@string/title_activity_witt"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Calculator"
            android:label="@string/title_activity_calculator"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ksbay.project_manager.MainActivity" />
        </activity>
        <activity
            android:name=".Conversions"
            android:label="@string/title_activity_conversions"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ksbay.project_manager.MainActivity" />
        </activity>
        <activity android:name=".ConversionList" />
        <activity
            android:name=".VolumeConversion"
            android:label="@string/title_activity_volume_conversion"
            android:parentActivityName=".ConversionList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ksbay.project_manager.ConversionList" />
        </activity>
        <activity android:name=".LengthConversion"></activity>
    </application>

</manifest>
