<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ksbay.project_manager.Calculator"
    tools:showIn="@layout/activity_calculator">


    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/seven"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:nestedScrollingEnabled="false"
        android:onClick="buttonClick7"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/eight"
        android:layout_alignTop="@+id/seven"
        android:layout_toEndOf="@+id/seven"
        android:textSize="40dp"
        android:onClick="buttonClick8" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/nine"
        android:layout_alignTop="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:textSize="40dp"
        android:onClick="buttonClick9" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/divide"
        android:layout_alignTop="@+id/nine"
        android:layout_toEndOf="@+id/nine"
        android:textSize="40dp"
        android:onClick="buttonClickDivide" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/four"
        android:layout_below="@+id/seven"
        android:layout_alignStart="@+id/seven"
        android:textSize="40dp"
        android:onClick="buttonClick4" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/five"
        android:layout_alignTop="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:textSize="40dp"
        android:onClick="buttonClick5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/six"
        android:layout_alignTop="@+id/five"
        android:layout_toEndOf="@+id/five"
        android:textSize="40dp"
        android:onClick="buttonClick6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        android:id="@+id/multiply"
        android:layout_alignTop="@+id/six"
        android:layout_toEndOf="@+id/six"
        android:textSize="40dp"
        android:onClick="buttonClickMultiply" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/one"
        android:layout_below="@+id/four"
        android:layout_alignStart="@+id/four"
        android:textSize="40dp"
        android:onClick="buttonClick1" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/two"
        android:layout_alignTop="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:textSize="40dp"
        android:onClick="buttonClick2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/three"
        android:layout_alignTop="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:textSize="40dp"
        android:onClick="buttonClick3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/subtract"
        android:layout_alignTop="@+id/three"
        android:layout_toEndOf="@+id/three"
        android:textSize="40dp"
        android:onClick="buttonClickSubtract" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/zero"
        android:layout_below="@+id/one"
        android:layout_alignStart="@+id/one"
        android:textSize="40dp"
        android:onClick="buttonClick0" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+/-"
        android:id="@+id/plusMinus"
        android:layout_alignTop="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:textSize="40dp"
        android:onClick="buttonClickPlusToMinus" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:id="@+id/decimal"
        android:layout_alignTop="@+id/plusMinus"
        android:layout_toEndOf="@+id/plusMinus"
        android:textSize="40dp"
        android:onClick="buttonClickDecimal" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/plus"
        android:layout_alignTop="@+id/decimal"
        android:layout_toEndOf="@+id/decimal"
        android:textSize="40dp"
        android:onClick="buttonClickAdd" />

    <Button
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="CLEAR"
        android:id="@+id/clear"
        android:layout_below="@+id/zero"
        android:layout_alignStart="@+id/zero"
        android:textSize="40dp"
        android:onClick="buttonClickClear" />

    <Button
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/equals"
        android:layout_alignTop="@+id/clear"
        android:layout_toEndOf="@+id/clear"
        android:textSize="40dp"
        android:onClick="buttonClickEquals" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SolutionBox"
        android:layout_alignStart="@+id/seven"
        android:layout_alignEnd="@+id/divide"
        android:textSize="50dp"
        android:textAlignment="textEnd"
        android:layout_above="@+id/eight" />

</RelativeLayout>

